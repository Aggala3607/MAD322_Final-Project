<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_rounded"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvquarantinetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:padding="5dp"
                android:textAlignment="inherit"
                android:text="title"
                android:textStyle="bold"
                android:textSize="16dp"
                />


            <TextView
                android:id="@+id/tvquarantine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:padding="5dp"
                android:textAlignment="inherit"
                android:text="If COVID-19 is spreading in your community, stay safe by taking some simple precautions, such as physical distancing, wearing a mask, keeping rooms well ventilated,
"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Edit"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttons"
                android:textColor="#fff"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Delete"
                android:background="@drawable/buttons"
                android:textColor="#fff"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>