<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F7">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdminDashboardActivity"
    android:orientation="vertical"
    android:background="@drawable/adminhom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Admin"
        android:textSize="40dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btn_guide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_rounded"
            android:text="Quarantine Guidelines"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_guidelines_svg"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btn_travel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_rounded"
            android:text="Travel Guidelines"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/instructions"
            android:padding="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btn_notification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_rounded"
            android:text="Notifications"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/notification"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btn_news"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_rounded"
            android:text="news"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/news"
            android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/admin_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>