<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adminlogin"
    android:orientation="vertical"
    tools:context=".activity.addTravelGuidelines">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Travel Guidelines"
        android:textColor="#000"
        android:layout_margin="20dp"
        android:textSize="30dp"
        android:paddingTop="50dp"
        />


    <EditText
        android:id="@+id/travel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvlog"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edittext_rounded"
        android:drawablePadding="10dp"
        android:hint="Enter  Title"
        android:padding="20dp"
        android:singleLine="true"
        android:textSize="19sp" />


    <EditText
        android:id="@+id/travel_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvlog"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edittext_rounded"
        android:drawablePadding="10dp"
        android:hint="Enter Description"
        android:padding="20dp"
        android:textSize="19sp"
        android:lines="8"
        android:minLines="6"
        android:scrollbars="vertical"
        android:gravity="top|left"/>

    <Button
        android:id="@+id/btn_travel_guide"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttons"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Add Travel Guidelines"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</LinearLayout>