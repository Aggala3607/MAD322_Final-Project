<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">







    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginscreen"
        android:layout_margin="20dp"
        tools:context=".activities.LoginActivity">


        <TextView
            android:layout_marginTop="150dp"
            android:id="@+id/tvlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="70dp"/>


        <TextView
            android:id="@+id/tvsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In to your Account"
            android:layout_below="@+id/tvlog"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="30dp"/>



        <EditText
            android:id="@+id/et_email"
            android:layout_below="@+id/tvsign"
            android:singleLine="true"

            android:background="@drawable/edittext_rounded"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:hint="Email"
            android:textSize="19sp"
            />


        <EditText
            android:id="@+id/et_password"
            android:singleLine="true"

            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edittext_rounded"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_email"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            android:padding="20dp"

            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="19sp"
            />



        <Button
            android:id="@+id/login_btn"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_below="@+id/et_password"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttons"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Login"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_reg"
            android:layout_below="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No account ?"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:textColor="#111111"
            android:textSize="19sp"
            />

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_below="@+id/et_password"
            android:layout_toRightOf="@+id/tv_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  signup"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="25dp"
            android:textColor="#000"
            android:textSize="19sp" />


        <TextView
            android:id="@+id/tv_forget_pass"
            android:layout_below="@+id/login_btn"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:text="Forget Password ?"
            android:textColor="#37b4ee"
            android:textSize="15dp" />

        <Button
            android:id="@+id/login_admin"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:foregroundGravity="center"


            android:layout_height="35dp"
            android:layout_below="@+id/tv_forget_pass"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Admin Login"
            android:textColor="@android:color/white" />



    </RelativeLayout>
</ScrollView>